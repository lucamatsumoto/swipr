<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/usernameLast"
        android:layout_width="211dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:text="Holt"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/venmo"
        app:layout_constraintTop_toBottomOf="@+id/usernameFirst" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="First Name"
        app:layout_constraintBottom_toTopOf="@+id/usernameFirst"
        app:layout_constraintStart_toStartOf="@+id/usernameFirst" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Last Name"
        app:layout_constraintBottom_toTopOf="@+id/usernameLast"
        app:layout_constraintStart_toStartOf="@+id/usernameLast" />

    <EditText
        android:id="@+id/venmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@+id/usernameLast" />

    <TextView
        android:id="@+id/usernameFirst"
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:layout_marginTop="48dp"
        android:text="Trevor"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/usernameLast"
        app:layout_constraintTop_toBottomOf="@+id/profilePic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venmo"
        app:layout_constraintBottom_toTopOf="@+id/venmo"
        app:layout_constraintStart_toStartOf="@+id/venmo" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="136dp"
        android:layout_height="49dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="Save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venmo" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>