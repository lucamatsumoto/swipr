<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shared.HereActivity">


    <Button
        android:id="@+id/here_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="64dp"
        android:onClick="launchHereButtonActivity"
        android:text="I'm Here!"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venmo_value" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/meet_with_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="Meet up with "
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmed_tag" />

    <TextView
        android:id="@+id/name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luca Matsumoto"
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/meet_with_tag"
        app:layout_constraintStart_toEndOf="@+id/meet_with_tag" />

    <TextView
        android:id="@+id/dining_hall_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bruin Plate"
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintStart_toStartOf="@+id/meet_with_tag"
        app:layout_constraintTop_toBottomOf="@+id/meet_with_tag" />

    <TextView
        android:id="@+id/at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" at "
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintStart_toEndOf="@+id/dining_hall_value"
        app:layout_constraintBaseline_toBaselineOf="@+id/dining_hall_value"
        />

    <TextView
        android:id="@+id/time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:00"
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintStart_toEndOf="@+id/at"
        app:layout_constraintBaseline_toBaselineOf="@+id/at" />

    <TextView
        android:id="@+id/venmo_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Venmo: "
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintStart_toStartOf="@+id/dining_hall_value"
        app:layout_constraintTop_toBottomOf="@+id/dining_hall_value" />

    <TextView
        android:id="@+id/venmo_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@test"
        android:textColor="@color/black"
        android:textSize="@dimen/here_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/venmo_tag"
        app:layout_constraintStart_toEndOf="@+id/venmo_tag" />

    <ImageView
        android:id="@+id/here_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="52dp"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmed_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Confirmed!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/here_profile_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>