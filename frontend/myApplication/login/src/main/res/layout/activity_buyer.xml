<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.BuyerActivity">

    <TextView
        android:id="@+id/b_buyer_tag"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        style="@style/Widget.AppCompat.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/b_seller_tag"
        android:background="@color/colorPrimary"
        android:textColor="@color/black"
        android:text="BUYER" />

    <Button
        android:id="@+id/b_seller_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchSellerActivity"
        android:text="@string/seller_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/b_result_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/b_buyer_tag"
        app:layout_constraintBottom_toTopOf="@id/b_guideline">
        <TextView
            android:id="@+id/b_result_main_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Available Offers:"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/b_resultRecycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/b_result_main_tag"
            android:layout_above="@id/b_set_filters"
            />

        <Button
            android:id="@+id/b_set_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Set Filters"
            android:onClick="setFilters"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/b_filter_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/b_buyer_tag"
        app:layout_constraintBottom_toTopOf="@id/b_guideline">
        <TextView
            android:id="@+id/b_filter_main_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Filter Search Results:"
            />

        <TextView
            android:id="@+id/b_filter_dining_tag"
            style="@style/filter_parameter"
            android:layout_below="@id/b_filter_main_tag"
            android:text="Select Dining Hall:"
            />

        <Spinner
            android:id="@+id/b_filter_dining_spinner"
            style="@style/filter_edit"
            android:layout_below="@id/b_filter_dining_tag" />

        <TextView
            android:id="@+id/b_filter_price_tag"
            android:layout_below="@id/b_filter_dining_spinner"
            android:text="Select Maximum Price:"
            style="@style/filter_parameter" />

        <EditText
            android:id="@+id/b_filter_price_edit"
            style="@style/filter_edit"
            android:inputType="numberDecimal"
            android:layout_below="@id/b_filter_price_tag"/>

        <TextView
            android:id="@+id/b_filter_start_tag"
            style="@style/filter_parameter"
            android:layout_below="@id/b_filter_price_edit"
            android:text="Select Start Time:" />

        <EditText
            android:id="@+id/b_filter_start_edit"
            style="@style/filter_edit"
            android:inputType="time"
            android:layout_below="@id/b_filter_start_tag"/>

        <TextView
            android:id="@+id/b_filter_end_tag"
            style="@style/filter_parameter"
            android:layout_below="@id/b_filter_start_edit"
            android:text="Select End Time:" />

        <EditText
            android:id="@+id/b_filter_end_edit"
            style="@style/filter_edit"
            android:inputType="time"
            android:layout_below="@id/b_filter_end_tag"/>

        <Button
            android:id="@+id/b_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="search"
            android:onClick="search"/>

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/b_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <Button
        android:id="@+id/b_Interests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Interests"
        app:layout_constraintTop_toBottomOf="@id/b_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="launchInterestsActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>

