<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Seller.SellerInterestActivity"></activity>
        <activity android:name=".Shared.HereActivity" />
        <activity android:name=".Buyer.Interest.RefineInterestActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.Buyer.InterestActivity" />
        </activity>
        <activity android:name=".Buyer.Result.ResultActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.Seller.SellerActivity" />
        </activity>
        <activity android:name=".EditProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.Buyer.BuyerActivity" />
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayMessageActivity">

        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Buyer.InterestActivity"
            android:label="Interest Activity"
            android:parentActivityName=".Buyer.BuyerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.Buyer.MainActivity" />
        </activity>
        <activity
            android:name=".Buyer.BuyerActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Seller.SellerActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Shared.DummyActivity"
            android:parentActivityName=".Buyer.BuyerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.Buyer.MainActivity" />
        </activity>
        <activity
            android:name=".Shared.Popup"
            android:theme="@style/popupTheme"></activity>

        <service
            android:name=".Shared.SocketService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>